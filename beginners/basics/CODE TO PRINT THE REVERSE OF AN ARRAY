#include <stdio.h>
void reverse(int arr[], int n);
void printt(int arr[], int n);

int main() {
    int n;
    printf("Enter the size of array: ");
    scanf("%d", &n);

    int arr[n];  // Declaring the array after knowing the size n

    for(int i = 0; i < n; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }

    reverse(arr, n);
    printf("Reversed array:\n");
    printt(arr, n);

    return 0;
}

// Function to print the array
void printt(int arr[], int n) {
    for(int i = 0; i < n; i++) {
        printf("%d\t", arr[i]);
    }
    printf("\n");
}

// Function to reverse the array
void reverse(int arr[], int n) {
    for(int i = 0; i < n/2; i++) {
        int firstval = arr[i];
        int secondval = arr[n - i - 1];
        arr[n - i - 1] = firstval;
        arr[i]=secondval;
    }
}
